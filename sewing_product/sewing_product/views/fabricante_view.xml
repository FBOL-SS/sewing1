<?xml version = "1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherited employee form view -->
    <record id="view_fabricante_form" model="ir.ui.view">
        <field name="name">view.fabricante.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <field name="categ_id" position="after">
                <field name="codigo_alternativo_1" string="Código alternativo 1:"/>
                <field name="codigo_alternativo_2" string="Código alternativo 2:"/>
                <field name="fabricante"/>
                <field name="marca_sw"/>
            </field>
        </field>
    </record>

</odoo>
